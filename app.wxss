@import './toast/toast';
@import './components/confirm/confirm';
@import './font/iconfont'; 
page{
  font: 30rpx  Helvetica,"Hiragino Sans GB","Microsoft YaHei";
}
.container {
  height: 100%;
  box-sizing: border-box;
} 
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.hoverclass {
	background-color: rgba(0, 0, 0, 0.1);
	opacity: 0.7;
}
.navigation{
  width:100%;
  height:45px;
  border-radius:10rpx;
  z-index:1;
  background-color:#fff;
  border-bottom: 2rpx solid #f5f5f5;
}
.navigation .navlist{
  display: flex;
}
.navigation  .navlist view{
  margin: auto;
  position: relative;
  width: 160rpx;
  height: 45px;
  line-height: 45px;
  text-align: center;
  display: inline-block;
  font-weight: bold;
}
.navigation .navlist .active{
  color: #f04d52;
}
.navigation .navlist .active::after{
  content: "";
  width: 80rpx;
  height: 6rpx;
  background-color: #f04d52;
  position: absolute;
  bottom: 10rpx;
  left:50%;
  margin-left: -40rpx;
  right: 0;
}
.scoll-h{
  height: 100%;
}
.empty{
  display: flex;
  flex-direction: column;
  padding:100rpx;
}
.empty image{
  width:400rpx;
  height:200rpx;
  margin:auto;
}
.empty text{
  margin: auto;
  color: #C1C1C1;
  padding: 20rpx;
}
.seenfoot{
  text-align:center;
  padding:30rpx 0 50rpx 0;
  color:#666;
}
.gotop{
  position: fixed;
  bottom: 100rpx;
  right: 50rpx;
  width: 140rpx;
  height: 140rpx;
}
