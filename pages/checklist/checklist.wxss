page{
  background-color: #f5f5f5;
}
.item {
  display:flex;
  padding:30rpx 30rpx 20rpx 30rpx;
  border-bottom:1px solid #F4F4F4;
  background-color:#fff;
  margin:20rpx;
  border-radius:20rpx;
  flex-direction:column;
  position: relative;
}
.item:active{
  background-color:#FEFEFE;
  opacity:0.7;
}
.dh text:first-child{
    background-color: #f04d52;
    color: #fff;
    margin-right: 20rpx;
    font-size: 26rpx;
    padding: 4rpx 10rpx;
}
.dh text:last-child{
    font-weight: bold
}
.item .content {
  display: flex;
  flex-direction: column;
  margin-top:10px;
}
.item .content text:nth-child(1){
  margin-bottom: 10rpx;
}
.item .content  .pdamount {
  width:1000%;
  padding-top:10rpx; 
  padding-bottom:20rpx;
}
.item .content  .pdamount text{
  color: #f04d52;
}
.item .content  .creatime {
  width:1000%;
  border-top: 1px solid #ebeff2;
  padding-top:10rpx;
  color: #999
}
.item .content  .creatime text{
  margin-bottom: 0;
}
.item .checked{
  color: #1296DB;
  position:absolute;
  right:0rpx;
  font-size:66px;
  top:-2rpx;
}
.item .checking{
  color: #55A351;
  position:absolute;
  right:0rpx;
  font-size:56px;
  top: -2rpx;
}
.addnew{
  width: 120rpx;
  height: 120rpx;
  position:fixed;
  bottom: 100rpx;
  right: 40rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
  box-shadow: 0 0 8px rgba(0, 0, 0, 0.2);
  border-radius: 100%;
  overflow: hidden;
  background-color: #fff;
}
.addnew:active{
  background-color:#ebeff2;
  opacity:0.7;
}
.addnew .addnew-icon{
  font-size: 80rpx;
}

.addnew .addnew-text{
  position: absolute;
  bottom: 10rpx;
  width: 120rpx;
  font-size: 26rpx;

}
.empty{
  display: flex;
  flex-direction: column;
  padding:100rpx;
}
.empty image{
  width:400rpx;
  height:200rpx;
  margin:auto;
}
.empty text{
  margin: auto;
  color: #C1C1C1;
  padding: 20rpx;
}
