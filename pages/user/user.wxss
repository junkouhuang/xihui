page{
  background: #ebeff2;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 300rpx;
  border-bottom:2rpx solid #ebeff2;
}
.userinfo .topic{
  width: 160rpx;
  height: 160rpx;
  border-radius:100%;
  z-index:2;
  font-size:28rpx;
  margin-top: 40rpx;
}
.userinfo text{
  margin-top: 30rpx;
  z-index:2;
  color: #fff;
  font-size: 34rpx;
}
.topicbj{
  width: 100%!important;
  height: 300rpx!important;
  position:absolute;
  top:0;
  left:0;
  right:0;
}
.cash{
  background-color: #fff;
  display: flex;
  padding: 30rpx 10rpx;
  align-items: center;
  justify-content: center;
  border-bottom:2rpx solid #f5f5f5;
}
.cash view{
  display: flex;
  flex: 1;
  align-items: center;
  font-size: 34rpx;
}
.cash i:nth-child(1){
  margin: 0 10rpx;
  font-size:54rpx;
  color: #ED9823;
}
.cash i:nth-child(2){
  width: 15rpx;
  height: 28rpx;
  margin-right: 10rpx;
}
.cash text{
  font-size:36rpx; 
}
.setting{
  background-color: #fff;
  display: flex;
  padding: 30rpx 10rpx;
  align-items: center;
  justify-content: center;
}
.setting view{
  display: flex;
  flex: 1;
  align-items: center;
  font-size: 34rpx;
}
.setting i:nth-child(1){
  margin: 0 10rpx;
  font-size:54rpx;
  color: #ED9823;
}
.setting i:nth-child(2){
  width: 15rpx;
  height: 28rpx;
  margin-right: 10rpx;
}
.setting text{
  font-size: 36rpx;
}
.logout{
  margin-top:30rpx;
  padding: 30rpx;
  text-align:center;
  background-color:#fff;
  color: #999;
  font-size: 36rpx;
}
.fixed{
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background: rgba(0, 0, 0, .5);
  z-index: 888;
}
.pwd{
  background-color: #fff;
  display: flex;
  padding: 20rpx;
  align-items: center;
  position: absolute;
  bottom: 0;
  width: 100%;
  z-index: 999;
}
.pwd input{
  flex: 1;
  padding:0 26rpx;
}
.pwd  button{
  width:130rpx;
  height:76rpx;
  line-height:76rpx;
  padding-left:5px;
  padding-right:5px;
  margin-right: 30rpx;
}
/* 支付密码css start */
.bg_layer{
  position:fixed;
  left:0;
  top:0;
  bottom:0;
  right:0;
  background-color:rgba(17, 17, 17, 0.7);
  z-index:9998;
}
.input_main{
  position:fixed;
  bottom:500rpx;
  width:600rpx;
  height:400rpx;
  background-color:#fff;
  z-index:9999;
  left: 50%;
  margin-left:-300rpx;
  top: 50%;
  margin-top: -200rpx;
  border-radius:30rpx;

}
.input_title{
  width:100%;
  height:90rpx;
  line-height:90rpx;
  text-align:center;
  font-size:32rpx;
  border-bottom:1rpx solid #e2e2e2;
}
 
.input_tip{ 
  margin:30rpx;
  font-size:24rpx;
  color:#888;
 }
 
/* 密码掩码模拟 */
.input_row{
  width: 570rpx;
  margin: 0 auto; 
  height: 90rpx;
  position: relative;
  display: flex; 
  align-items: center; 
  border: 1rpx solid #e2e2e2; 
  border-radius: 20rpx;
}
.input_row .pwd_item{
  flex:1;
  display:flex;
  align-items:center;
  justify-content:center;
  height:100%;
  border-right:1rpx solid #e2e2e2;
  position:relative;
}
.pwd_item:nth-last-of-type(1) { 
  border-right: 0; 
  }
.pwd_item text {
  width: 20rpx; 
  height: 20rpx; 
  border-radius: 30rpx; 
  background-color: #555;
}
 
 
/* 文本输入框位置: 设置到左边隐藏 */
.input_control {
  position:relative;
  left:-300rpx;
  bottom:0;
  width:100rpx;
  height:100rpx;
}