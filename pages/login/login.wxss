page{
  width: 100%;
  height: 100%;
}
.login {
  width: 100%;
  height: 100%;
  background-color: #F4F4F4;
}
.title{
  width: 100%;
  height: 350rpx;
  background-color: #1B1A1F;
  text-align: center;
}
.title image{
  width: 300rpx;
  height: 300rpx;
  animation: show 1s linear;
  opacity: 1;
}
@keyframes show{
  from {opacity: 0;}
  to {opacity: 1;}
}
.vessel{
  width: 100%;
  position: relative;
}
.login-form{
  animation: rise .5s linear;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
}
@keyframes rise{
  from {top: 500px;}
  to {top: 0px;}
}
.input-group{
  margin: 20rpx 2% 0;
  display: flex;
  align-items:center;
  border: 2px solid #f4f4f4;
  background-color: #fff;
  padding: 26rpx 10rpx;
  border-radius:5px;
}
.active {
  border: 2px solid #1B1A1F;
}
.dh,.username,.password{
  color: #999;
  padding:0 26rpx;
  border-right:1px solid #d8d8d8;
  font-size: 36rpx;
}
input{
  padding:0 26rpx;
  flex:1;
  font-size: 36rpx;
}
.circle {
  width: 10%;
  text-align:center;
}
.circle i{
  font-size: 36rpx;
}
.circle1 i{
  font-size: 32rpx;
}
i{
  margin: auto;
  color: #999;
}
.confirm-btn{
  width: 96%;
  margin-left: 2%;
  margin-top: 50rpx;
  line-height:85rpx;
  height:85rpx;
  background:#1B1A1F;
  color: #BD973B;
  font-size: 36rpx;
  border-radius: 50rpx;
}  
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 