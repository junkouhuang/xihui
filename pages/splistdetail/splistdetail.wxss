.fix{
  width: 100%;
  background-color: #fff;
  position: fixed;
  bottom: -300px;
}
.slideup{
  position: fixed;
  bottom: 0;
  animation:mymove1 .5s;
}
.slidedown{
  position: fixed;
  bottom: -300px;
  animation:mymove2 .5s;
}
@keyframes mymove1
{
from {bottom:-300px;}
to {bottom:0;}
}
@keyframes mymove2
{
from {bottom:0;}
to {bottom:-300px;}
}
