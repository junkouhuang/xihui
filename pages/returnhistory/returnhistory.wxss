page{
  background: #FEFEFE;
}
.item{
  background-color: #fff;
  margin: 20rpx;
  position:relative;
  border-radius: 10rpx;
  box-shadow: 0 0 3px rgba(0, 0, 0, 0.1)
}
.item .content{
 padding: 0 30rpx;
}
.left{
  position: relative;
}
.price{
  color: #f04d52;
  padding: 20rpx 0rpx;
}
.username{
 color: #ccc;
 padding: 0 0 50rpx 0;
}
.time{
  padding: 20rpx 0;
  border-bottom: 2rpx solid #f5f5f5;
  color: #ccc;
}
.ordercode{
  padding: 20rpx 0 0 0;
  font-size: 32rpx;
  display: flex;
  align-items: center;
}
.ordercode text{
  background-color: #f04d52;
  color: #fff;
  margin-right: 20rpx;
  font-size: 26rpx;
  padding: 4rpx 10rpx;
}
.waitpay text{
  color: #0199FC;
}
.paying text{
  color:red; 
}
.item .shizhong{
  left: 0rpx;
}
.item  i{
  position: absolute;
  right: 20rpx;
  top: 80rpx;
  font-size: 40px;
}
.empty{
  display: flex;
  flex-direction: column;
  padding:100rpx;
}
.empty image{
  width:400rpx;
  height:200rpx;
  margin:auto;
}
.empty text{
  margin: auto;
  color: #C1C1C1;
  padding: 20rpx;
}
.gotop{
  position: fixed;
  bottom: 100rpx;
  right: 50rpx;
  width: 140rpx;
  height: 140rpx;
}