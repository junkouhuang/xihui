page{
  background-color: #ebeff2;
}
.search{
  width: 100%;
  height: 130rpx;
  position: fixed;
  top: 0;
  z-index: 1;
  border-bottom:2rpx solid #f4f4f4;
  background-color:#fff;
}
.search .group{
  padding: 26rpx;
  display: flex;
  align-items:center;
  justify-content:center;/**水平居中*/
  position: relative;
}
.search .group navigator{
  flex: 1;
}
.search .group .searchcion{
  position: absolute;
  left: 76rpx;
}
.search input{
  background-color:#F0F4F5;
  padding:14rpx 76rpx;
  border-radius:50rpx;
  margin:0 20rpx;
  flex:1;
}
.goods{
  margin-top: 130rpx;
}
.item{
  padding: 10rpx 26rpx;
  display: flex;
  align-items:center;
  border-bottom: 1px solid #F4F4F4;
  background-color:#fff;
}
.item:active{
  background-color:#ebeff2;
  opacity:0.7;
}
.spimgpath {
  width:200rpx;
  height:150rpx;
  background-size:cover;
  border-radius:10rpx;
  background-position: center;
  border: 2rpx solid #f5f5f5;
}
.detailpic_no {
  width:200rpx;
  height:150rpx;
  border-radius:10rpx;
  background-color: #F1F4F7;
  text-align:center;
}
.detailpic_no image{
  width:150rpx;
  height:150rpx;
}
.detail{
  display: flex;
  flex-direction: column;
  padding:20rpx 0 20rpx 20rpx ;
  flex: 1;
}
.detail text{
  font-size:30rpx;
}
.detail text:nth-child(2),
.detail text:nth-child(32),
.detail text:nth-child(4)
{
  padding-top: 14rpx;
}
.spcode{
  color: #999;
}
.sellprice{
  color: #f04d52;
  font-weight:bold;
  margin-top: 20rpx;
}
.rmb{
  font-size: 20rpx!important;
}
.empty{
  display: flex;
  flex-direction: column;
  padding:100rpx;
}
.empty image{
  width:400rpx;
  height:200rpx;
  margin:auto;
}
.empty text{
  margin: auto;
  color: #C1C1C1;
  padding: 20rpx;
}