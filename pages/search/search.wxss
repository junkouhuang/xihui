
page{
  background-color:#ebeff2;
}
.search{
  width: 100%;
  height: 200rpx;
  position: fixed;
  top: 0;
  z-index: 1;
}
.group{
  height: 120rpx;
  background-color: #fff;
  padding:0  26rpx;
  display: flex;
  align-items:center;
  justify-content:center;/**水平居中*/
  position: relative;
}
.group navigator{
  flex: 1;
}
.searchcion{
  position: absolute;
  left: 76rpx;
}
.search input{
  background-color:#F0F4F5;
  padding:14rpx 76rpx;
  border-radius:50rpx;
  margin:0 20rpx;
  flex:1;
}
.selecttype{
   height: 80rpx;
  display: flex;
  background-color: #fff;
  padding: 0 50rpx 0rpx 50rpx;
  align-items: center;
}
.selecttype text:nth-child(2),
.selecttype text:nth-child(3),
.selecttype text:nth-child(4){
  margin: auto;
  border-radius: 40rpx;
  border: 2rpx solid #f5f5f5;
  padding: 10rpx 30rpx;
}
.act{
  background:linear-gradient(to right, #ffae12 0, #f07d17 100%) ;
  color: #fff;
}
.goods{
  margin-top: 200rpx;
}
.item{
  padding: 10rpx 26rpx;
  display: flex;
  align-items:center;
  border-bottom: 1px solid #F4F4F4;
  background-color: #fff;
}
.add{
  width: 80rpx!important;
  height: 80rpx!important;
}
swiper{
  width: 180rpx;
  height: 180rpx;
}
.goods .spimg{
  width: 180rpx;
  height: 180rpx;
  border: 2rpx solid #f5f5f5;
  border-radius: 10rpx;
  background-position: center;
  background-size: cover;
}
.detail{
  display: flex;
  flex-direction: column;
  padding:20rpx 0 20rpx 20rpx ;
  flex: 1;
}
.detail text{
  font-size:30rpx;
}
.detail text:nth-child(2),
.detail text:nth-child(3)
{
  padding-top: 14rpx;
}
.unicode{
  color: #999;
}
.sl{
  color: #999;
}
.empty{
  display: flex;
  flex-direction: column;
  padding:100rpx;
}
.noimg{
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
}
.empty image{
  width:400rpx;
  height:200rpx;
  margin:auto;
}
.empty text{
  margin: auto;
  color: #C1C1C1;
  padding: 20rpx;
}
.gotop{
  position: fixed;
  bottom: 100rpx;
  right: 50rpx;
  width: 140rpx;
  height: 140rpx;
}