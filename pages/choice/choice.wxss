/* pages/choice/choice.wxss */
page{
  background:rgba(17, 17, 17, 0.7);
  width: 100%;
  height: 100%;
}
.choice{
  position: fixed;
  top: 50%;
  margin-top: -345rpx;
  left: 50%;
  margin-left:-300rpx;
  z-index:2;
  width: 600rpx;
  height: 730rpx;
}
.eturn{
  width: 600rpx;
  height: 730rpx;
  background-color: #fff;
  position: absolute;
  border-radius: 30rpx;
}
.choicestyle{
  text-align: center;
  padding:30rpx;
  background-color:#f5f5f5;
  border-top-left-radius:30rpx;
  border-top-right-radius:30rpx;
}
.choicestyle i{
  font-size: 40rpx;
  position:absolute;
  right:30rpx;
}
.price{
  text-align:center;
  font-size:40rpx;
  padding:20rpx;
  border-top:2rpx solid #f5f5f5;
  border-bottom:2rpx solid #f5f5f5;
  position:relative;
}
.price text{
  position: absolute;
  right: 30rpx;
  color: #f04d52;
  font-size:28rpx;
  top:30rpx;
}
.label{
  padding: 18rpx 60rpx;
  display:flex;
  justify-content:space-between;
  border-bottom:2rpx solid #f5f5f5;
  align-items:center;
  font-size:32rpx;
}
.label view{
  display: flex;
  width:170rpx;
  position:relative;
  align-items:center;
}
.label view .symbol{
  color: #999;
  position:absolute;
  left:0;
}
.label input{
  width: 150rpx;
  padding:0 10rpx;
  flex:1;
  margin: 0 10rpx 0 10rpx;
  border-radius:10rpx;
  color: #999;
  text-align:center;
}
.label input:focus{
  box-shadow: 0 0 15px #ccc;
}
.label view i{
  margin-left:10rpx;
}
.label view .weixin{
  color: #3AB034;
}
.label view .alipay{
  color: #00A0E9;
}
.pan{
  position: absolute;
  right: 0;
  font-size: 40rpx;
}
.confirmbtn{
  width: 100%;
  text-align:center;
  margin-top:10rpx;
}
.confirmbtn view{
  position:absolute;
  text-align:center;
  width:100%;
  color:#fff;
  font-size:40rpx;
  padding:16rpx 0;
  z-index: 1;
}
.confirmbtn image{
  width:500rpx;
  height:80rpx;
}
.tip{
  width:100%;
  height:80rpx;
  background-color:#fde2e2;
  border: 1px solid #ebeef5;
  color:#f56c6c;
  position:fixed;
  top:-90rpx;
  left:0;
  right:0;
  text-align:center;
  line-height:80rpx;
}
.tipscss{
  animation: slide 2s;
}
@keyframes slide{
  0%{
    top: -50px;
  }
  30%{
    top: 0;
  }
  70%{
    top: 0;
  }
  100%{
    top: -50px;
  }
}
.gray { 
    filter: grayscale(100%);
    filter: gray;
}