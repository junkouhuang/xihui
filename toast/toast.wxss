.wxToast_mask{
    width:100%;
    height:100rpx;
    position:fixed;
    left:0px;
    bottom:0px;
    z-index:10000;
    background:rgba(0,0,0,0);
    opacity:0;
    display:none;
  }
.wxToast_show{
    display:block;
  }
.wxToast_content{
    max-width:80%;
    min-width:90px;
    /**min-height: 120px;**/
    position:absolute;
    left:50%;
    /**top:50%;**/
    top:0;
    margin-top: -60px;
    transform:translate3d(-50%,0,0);
    /**padding:0 15px;**/
    padding: 5px;
    color:#fff;
    font-size:15px;
    text-align:center;
   /** border-radius:5px;**/
    background:rgba(17, 17, 17, 0.7);
  }
  .wxToast_content view:nth-child(1){
    /**height: 90px;
    line-height: 90px;**/
    display:flex;
    align-items:center;
    justify-content:center;
  }
  .wxToast_content view:nth-child(2){
    min-height: 30px;
    padding: 0 0 20rpx 0;
  }
.wxToast_img{
    width:50px;
    height:50px;
    display:block;
  }